<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hh.his.graduationproject.dao.InpatientWardMapper">
    <resultMap id="wardResult" type="InpatientWard">
        <result property="wid" column="wid"/>
        <result property="wardId" column="iward_id"/>
        <result property="wardBedNum" column="iward_bed_num"/>
        <result property="wardStatus" column="iward_status"/>
        <association property="wardType" column="iward_type" javaType="InpatientWardType">
            <result property="iwtId" column="iwt_id"/>
            <result property="iwtType" column="iwt_type"/>
            <result property="iwtPrice" column="iwt_price"/>
        </association>
        <association property="dept" column="d_id" javaType="Dept">
            <result property="deptId" column="dept_id"/>
            <result property="deptName" column="dept_name"/>
        </association>
    </resultMap>

    <select id="findWardByDept" resultMap="wardResult">
        SELECT *
        FROM inpatient_ward a,inpatient_ward_type b,dept c
        WHERE a.iward_type = b.iwt_id and a.d_id = c.dept_id
        and c.dept_id = #{deptId}
    </select>

    <select id="findWardByCondition" resultType="int">
        SELECT count(*)
        FROM inpatient_ward a
        WHERE a.iward_id = #{wardId} and a.d_id = #{deptId}
    </select>

    <select id="findWardsByCondition" resultMap="wardResult">
        SELECT *
        FROM inpatient_ward a,inpatient_ward_type b,dept c
        WHERE a.iward_type = b.iwt_id and a.d_id = c.dept_id
        <if test="wardConditionVO.deptIdSelective !=null and  wardConditionVO.deptIdSelective !='' ">
            and a.d_id = #{wardConditionVO.deptIdSelective}
        </if>
        <if test="wardConditionVO.wardStatus != null">
            and a.iward_status = #{wardConditionVO.wardStatus}
        </if>
        <if test="wardConditionVO.wardId !=null and  wardConditionVO.wardId !='' ">
            and a.iward_id = #{wardConditionVO.wardId}
        </if>

    </select>

    <select id="findNullWardByCondition" resultType="int">
        select count(*)
        from inpatient_ward
        where wid = #{wid} and iward_bed_num = 0
    </select>

    <select id="findWardById" resultMap="wardResult">
        SELECT *
        FROM inpatient_ward a
        WHERE a.wid = #{wid}
    </select>

    <insert id="insertWard">
        INSERT inpatient_ward(d_id,iward_id,iward_bed_num,iward_status,iward_type)
        VALUES (#{wardAddDTO.deptId},#{wardAddDTO.wardId},#{wardAddDTO.wardBedNum},#{wardAddDTO.wardStatus},#{wardAddDTO.wardType})
    </insert>

    <delete id="delWard">
        DELETE FROM inpatient_ward where wid = #{wid}
    </delete>

    <update id="updateWard">
        UPDATE inpatient_ward
        SET iward_type = #{wardUpdateVO.iwtId},
        iward_id=#{wardUpdateVO.wardId},
        d_id=#{wardUpdateVO.deptId}
        WHERE wid = #{wardUpdateVO.wid}
    </update>
    
    <update id="updateWardWithDTO">
        UPDATE inpatient_ward
        <trim prefix="set" suffixOverrides=",">
            <if test="dto.wardId != null and dto.wardId!='' ">
                iward_id = #{dto.wardId},
            </if>
            <if test="dto.deptId !=null and dto.deptId!= '' ">
                 d_id = #{dto.deptId},
            </if>
            <if test="dto.wardBedNumber != null">
                iward_bed_num = #{dto.wardBedNumber},
            </if>
            <if test="dto.wardStatus != null">
                iward_status = #{dto.wardStatus},
            </if>
            <if test="dto.wardType != null and dto.wardType != ''">
                iward_type = #{dto.wardType},
            </if>
        </trim>
        WHERE wid = #{dto.wid}
    </update>

    <update id="updateWardDeptId">
        update inpatient_ward
        set d_id = #{new}
        where d_id = #{old}
    </update>

</mapper>